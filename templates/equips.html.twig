{% endblock %}
{% block title %}Equips{% endblock %}
{% block body %}
    <h1 id="titolEquip">Fitxa de contacte</h1>
    {% if equip %}
        <p class="paragrafEquip">
            <img src="{{ asset("imgs/" ~ equip.imatge) }}" alt="{{ equip.nom }}" class="imatgeEquip"><br>
            Projecte 2n DAW Symfony
        </p>
        <ul class="dadesEquip">
            <li><strong class="titleEquip">{{ equip.nom }}</strong></li>
            <li><strong>Codi</strong>: {{ equip.id }}</li>
            <li><strong>Curs</strong>: {{ equip.curs }}</li>
            <li><strong>Cicle</strong>: {{ equip.cicle }}</li>
            <li><strong>Nota</strong>: {{ equip.nota }}</li>
